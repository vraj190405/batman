                <a href="https://www.lego.com/en-in/exploretheworld?age-gate=grown_up" class="mt-6 inline-block bg-blue-500 text-white py-2 px-6 rounded-lg shadow-lg hover:bg-blue-400 btn-pop transition duration-300">View Lego Sets</a>
            </div>
        </div>
    </div>

    <!-- Card Grid Layout -->
    <div class="container mx-auto grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-10 py-12 px-4">
        <!-- Card 1 -->
        <div class="card bg-white rounded-lg shadow-lg hover:shadow-xl transition-transform transform hover:scale-105 overflow-hidden">
            <img src="https://m.media-amazon.com/images/I/612bfWk+zpL._AC_UF1000,1000_QL80_.jpg" class="h-48 w-full object-cover">
